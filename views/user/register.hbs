
{{> header }}

  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class="col-md-6 col-sm-8 col-lg-4">
        <div class="card">
          <div class="card-header">
            <h3 class="text-center">Register</h3>
          </div>
          <div class="card-body">

            {{#if error}}
              <div class="mb-2">
                <div class="alert alert-danger">{{ error }}</div>
              </div>
            {{/if}}


            <form id="loginForm" action="/register" method="post" novalidate>
              <div class="mb-3">
                <label for="username" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name" required>
                <div class="invalid-feedback" id="usernameError">Please enter your name</div>
              </div>
              <div class="mb-3">
                <label for="username" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                <div class="invalid-feedback" id="usernameError">Please enter a valid email.</div>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" min="6" required />
                <div class="invalid-feedback" id="passwordError">Please enter a valid password.</div>
              </div>
              <div class="mb-3">
                <label for="mobile" class="form-label">Mobile</label>
                <input type="number" class="form-control" id="mobile" name="mobile" placeholder="Enter Number" min="10" required />
                <div class="invalid-feedback" id="passwordError">Please enter your correct number</div>
              </div>
              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-block mt-3">Sign up</button>
              </div>
              <div class="mt-3">
                <p>Already have an account? <a href="/login"> Sign in</a></p>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>

  
  {{!-- front end validation --}}
  <script>
    const form = document.querySelector("#loginForm")
    form.addEventListener("submit", (event) => {
        event.preventDefault();
        if (form.checkValidity() === false) {
            form.classList.add("was-validated")
        } else if (!customValidity()) {
            return;
        } 
        else {
            form.submit()
        }
    }, false)

    function customValidity() {
        const password = document.getElementById("password")
        const mobile = document.getElementById("mobile")
          if (password.value.length < 6) {
            password.classList.add("is-invalid");
            password.nextElementSibling.style.display = "block";
            return false;
          } 
          if (mobile.value.length < 10 || mobile.value.length >10) {
            mobile.classList.add("is-invalid");
            mobile.nextElementSibling.style.display = "block";
            return false;
          } 

        return true;
    }
  </script>


