<div class="container mt-4">
  <h1 class="badge bg-secondary mb-2 mt-2 ">Users Table</h1>

  {{#if users.length}}

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Verified</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>

    {{#each users}}
      <tr>
        <td>{{name}}</td>
        <td>{{email}}</td>
        <td>{{mobile}}</td>
        <td>
            {{#if isVerified}} yes
            {{else}} No
            {{/if}} 
        </td>
        <td>
          <a href="/admin/users/{{_id}}/editUser" class="btn btn-outline-info btn-sm">Edit</a>
          <form action="/admin/users/{{_id}}/destroy?_method=DELETE" method="POST"  class="d-inline-block">
             <button type="submit"  class="btn btn-outline-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
     
    </tbody>
  </table>

  {{else}}
    <h2>No users found</h2>
  {{/if}}
</div>


